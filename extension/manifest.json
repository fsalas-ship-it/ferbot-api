{
  "manifest_version": 3,
  "name": "FerBot",
  "version": "1.1.0",
  "description": "Asistente comercial de Ferney (panel flotante en Hilos).",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://app.hilos.io/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["https://app.hilos.io/*"]
}
