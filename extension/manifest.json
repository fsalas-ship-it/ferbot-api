{
  "manifest_version": 3,
  "name": "FerBot",
  "version": "1.0.0",
  "description": "FerBot: panel comercial en sitios permitidos (Hilos, WhatsApp Web, etc.)",
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "permissions": ["storage"],
  "host_permissions": [
    "*://app.hilos.io/*",
    "*://web.whatsapp.com/*",
    "*://fsalas-ship-it.github.io/*",
    "*://ferbot-api.onrender.com/*",
    "*://chatgpt.com/*",
    "*://chat.openai.com/*"
  ],

  "content_scripts": [
    {
      "matches": [
        "*://app.hilos.io/*",
        "*://web.whatsapp.com/*",
        "*://fsalas-ship-it.github.io/*",
        "*://ferbot-api.onrender.com/*",
        "*://chatgpt.com/*",
        "*://chat.openai.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],

  "web_accessible_resources": [
    {
      "resources": ["fab-move.js"],
      "matches": ["<all_urls>"]
    }
  ],

  "action": {
    "default_popup": "popup.html",
    "default_title": "FerBot"
  }
}
