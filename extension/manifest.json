{
  "manifest_version": 3,
  "name": "FerBot",
  "description": "Asistente comercial (WhatsApp-friendly) con WHY/NEXT, countdown, sentimiento y ratings.",
  "version": "1.5.1-debug",
  "icons": {
    "16": "icon-16.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://ferbot-api.onrender.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "FerBot"
  }
}
