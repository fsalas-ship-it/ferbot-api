{
  "manifest_version": 3,
  "name": "FerBot",
  "version": "1.3.0",
  "description": "FerBot: asistente comercial. Panel con countdown, sentimiento y ratings. Control de sitios.",
  "action": {
    "default_title": "FerBot",
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],
  "commands": {
    "toggle-ferbot": {
      "suggested_key": { "default": "Alt+Shift+F" },
      "description": "Mostrar/ocultar panel FerBot"
    }
  }
}

