{
  "manifest_version": 3,
  "name": "FerBot",
  "description": "Asistente comercial (FerBot) para web y Hilos. FAB arrastrable + panel.",
  "version": "1.4.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_title": "FerBot"
  },
  "permissions": [],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "content_scripts": [
    {
      "matches": [ "<all_urls>" ],
      "js": [
        "contentScript.js",
        "fab-move.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "icon16.png", "icon48.png", "icon128.png" ],
      "matches": [ "<all_urls>" ]
    }
  ]
}
