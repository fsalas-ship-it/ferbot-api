{
  "manifest_version": 3,
  "name": "FerBot",
  "description": "Asistente de ventas de Platzi para Hilos: genera respuesta + POR QUÃ‰ / SIGUIENTE PASO, con countdown, sentimiento y rating.",
  "version": "1.3.0",
  "icons": {
    "16": "icons/ferbot-16.png",
    "32": "icons/ferbot-32.png",
    "48": "icons/ferbot-48.png",
    "128": "icons/ferbot-128.png"
  },

  "action": {
    "default_title": "FerBot"
  },

  "content_scripts": [
    {
      "matches": [
        "https://app.hilos.com/*",
        "https://*.hilos.com/*",
        "http://app.hilos.com/*",
        "http://*.hilos.com/*"
      ],
      "js": ["contentScript.js"],
      "run_at": "document_idle",
      "all_frames": true
    }
  ],

  "permissions": [],

  "host_permissions": [
    "https://ferbot-api-clean.onrender.com/*"
  ],

  "web_accessible_resources": [
    {
      "resources": [
        "icons/ferbot-16.png",
        "icons/ferbot-32.png",
        "icons/ferbot-48.png",
        "icons/ferbot-128.png"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
